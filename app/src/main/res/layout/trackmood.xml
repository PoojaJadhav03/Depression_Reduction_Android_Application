<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginTop="42dp"
        android:text="Track your mood"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="122dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Colour"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="171dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="Description of mood according to choosen colour" />

        <ImageView
            android:id="@+id/finalcolors"
            android:layout_width="49dp"
            android:layout_height="51dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_notification_overlay" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginTop="184dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Image"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Description of mood according to choosen image" />

        <ImageView
            android:id="@+id/finalimages"
            android:layout_width="58dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_report_image" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginTop="241dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Emojie"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="166dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:text="Description of mindset of victim" />

        <ImageView
            android:id="@+id/finalemojis"
            android:layout_width="49dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/bvnbvbnv" />
    </LinearLayout>

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="186dp"
        android:background="@color/Orange"
        android:text="back"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button9"
        android:layout_width="151dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="188dp"
        android:background="@color/Chocolate"
        android:text="see in statistics"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</RelativeLayout>